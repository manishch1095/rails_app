<div><%= paginate(@secret_codes)  %></div>
<div class="container-fluid">
  <div class="table-responsive-md">
    <table class="table table-bordered table-striped">
      <thead>
      <tr scope="col">
        <th>Secret Code</th>
        <th>User Email</th>
      </tr>
      </thead>
      <tbody>
      <%= render partial: 'secret_code/table/row', collection: @secret_codes, as: :code %>
      </tbody>
    </table>
  </div>
</div>
<br>
<div>
  <%= form_for( '', method: "post") do |f| %>
      <div class="box-body">
        <div class="row">
          <div class="form-group col-xs-2 col-md-2 m-t-2">
            <%= f.label :Secret_Code %>
            <%= f.select :code_count ,[1,10,20,50,100], prompt: 'Select count',selected: params[:code_count] %>
          </div>
          <div class="form-group col-xs-2 col-md-2 m-t-2">
            <%= f.submit "Create secret Codes", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
  <% end %>
</div>
<div><%= paginate(@secret_codes)  %></div>
